#include<iostream>
using namespace std;
int main()
{
	float sum=0, num1=0, num2=0, average=0;
	
	cout<<"Type a number: ";
	cin>>num1;
	
	cout<<"Type another number: ";
	cin>>num2;
	
	cout<<"\n";

	cout<<"The first number is "<<num1<<". \n";
	cout<<"The second number is "<<num2<<". \n";
	
	sum=num1+num2;
	average=sum/2;
	
	cout<<"\n";

	cout<<"The sum is "<<sum<<". \n";
	cout<<"The average is "<<average<<".";
	
	return 0;
}
